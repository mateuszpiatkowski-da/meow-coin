{
  "name": "test-coin",
  "module": "index.ts",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "daml:rebuild": "(cd ./daml && daml clean && daml build) && (cd ./daml/test && daml clean && daml build)",
    "daml:generate-ts": "daml codegen js ./daml/.daml/dist/test-coin-1.0.0.dar -o ./daml-ts",
    "daml:install-deps": "for dir in daml-ts/*/; do (cd \"$dir\" && bun install); done",
    "dev": "bun --watch src/index.ts",
    "postinstall": "[ -f ./daml/.daml/dist/test-coin-*.dar && -f ./daml-ts/* ] || (bun daml:rebuild && bun daml:generate-ts && bun daml:install-deps)"
  },
  "dependencies": {
    "@canton-network/core-token-standard": "^0.17.2",
    "@canton-network/wallet-sdk": "^0.20.0",
    "jose": "^6.1.3",
    "openapi-backend": "^5.15.0",
    "pino": "^10.2.0",
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prettier": "^3.7.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
